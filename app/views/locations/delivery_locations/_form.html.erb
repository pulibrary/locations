<%= form_for(@delivery_location, html: { class: 'form-horizonal' }) do |f| %>

  <fieldset>
  <div class="form-group">
    <%= f.label 'Delivery Location', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :label, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label 'Library', class: 'col-sm-2 control-label'%>
    <div class="col-sm-10">
      <%= f.collection_select :locations_library_id, Locations::Library.all, :id, :label, {prompt: "Select a Library"}, {class: "form-control"} %>
    </div>
  </div>



  <div class="form-group">
    <%= f.label 'Street Address', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :address %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Phone Number', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :phone_number %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Contact E-mail Address', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :contact_email %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'GFA System Pickup Code', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :gfa_pickup %>
    </div>
  </div>  

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          <%= f.check_box(:staff_only) %> Items are for Staff-Only
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          <%= f.check_box(:pickup_location) %> This is a Pickup Location
        </label>
      </div>
    </div>
  </div>  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-default' %>
    </div>
  </div>
</fieldset>
<% end %>
